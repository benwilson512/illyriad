<!DOCTYPE html>
<html>
<head>
  <title><%=raw "#{@page_title || [controller.controller_name.to_s.titleize, controller.action_name.to_s.titleize].join(" &raquo; ")}" %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js', 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
    
    
    <div id="top">
        <%= link_to "Statistics", root_path %>
        <%= link_to "Alliances Index", alliances_path %>
        <%= link_to "Players Index", players_path %>
        <%= link_to "Towns Index", towns_path %>
        <% if user_signed_in? %>
            <%= link_to "Siege Index", sieges_path %>
            <%= link_to "Sign out", destroy_user_session_path %>
        <% else %>
            <%= link_to "Sign in", new_user_session_path %>    
        <% end %>
    </div>
    
    <hr>
    <% if flash[:notice] -%>
      <p class="flash notice">
      <%= flash[:notice] %>
      </p>
    <% end %>

    <% if flash[:error] -%>
      <p class="flash error">
      <%= flash[:error] %>
      </p>
    <% end %>
    

<%= yield %>

</body>
</html>
