<!DOCTYPE html>
<html>
<head>
  <title><%= @player ? "Player: #{@player.name}" : "Players" %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  
  <div id="top">
	<%= link_to "Statistics", root_path %>
    <%= link_to "Alliances Index", alliances_path %>
    <%= link_to "Players index", players_path %>
    <%= link_to "Towns index", towns_path %>
    <% user_signed_in? ? %><%= link_to "Sign out", destroy_user_session_path %><% : %><%= link_to "Sign in", new_user_session_path %>
  </div>
  
  <hr>
  
<div id="content">
<p style="color: green"><%= flash[:notice] %></p>
<%= yield %>
</div>

</body>
</html>
