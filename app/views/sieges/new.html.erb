<h1>Create Siege</h1>
<h2>Target: <%= @town.name %></h2>

<%= form_for @siege, :url => sieges_path do |f| %>
    <%= f.label(:name) %>
    <%= f.text_field(:name) %>
    <%= f.label(:positions, 'Define up to 8 positions ie NW,S,E,SE')%>
    <%= f.text_field(:positions)%>
    <%= f.label(:time_label) %>
    <%= f.text_field(:time) %>
    <%= f.hidden_field(:target_id) %>
    <%= f.submit(:submit) %>
    
<% end %>

