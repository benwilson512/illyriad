<h1>Listing players</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Alliance</th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%=h player.name %></td>
    <td><%=h player.alliance ? player.alliance.name : "N/A" %></td>
    <td><%= link_to 'Show', player %></td>
  </tr>
<% end %>
</table>

